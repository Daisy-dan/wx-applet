/* pages/collection/collection.wxss */
.collection{
    background: #ffffff;
    margin-bottom: 10px;
    border: 1px solid #e4e4e4;
    font-size: 16px;
    font-family: Arial, Helvetica, sans-serif;
}
.itemName{
    line-height: 80px;
    display: inline-block;
    width: 30%;
    background: #e4e4e4;
    text-align: center;
}
.itemDetail{
    display: inline-block;
    padding-left: 40px;
    color: #999999;
    vertical-align: middle;
}
.itemDetail .itemManual{
    font-size: 18px;
    line-height: 40px;
}
.itemPeople{
    font-size: 14px;
}