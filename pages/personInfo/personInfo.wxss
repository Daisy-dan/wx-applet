/* pages/personInfo/personInfo.wxss */
.p20{
    padding:0 20px;
}
form{
    background: #ffffff;
}
.borderB{
    border-bottom: 1px solid #e4e4e4;
    position: relative;
}
.borderB input{
    display: inline-block;
    height: 48px;
    vertical-align: middle;
}
.picker{
    position: absolute;
    right: 30px;
    top:0;
    font-size: 16px;
}
.H90{
     height: 90px;
     padding-top: 10px;
}
.H48{
    height: 48px;
}
.form-title{
    font-size: 16px;
    color: #666666;
    display: inline-block;
    vertical-align: middle;
    padding: 0 20px;
}
.lineH90{
    line-height: 90px;
}
.lineH48{
    line-height: 48px;
}
.personImg,.chooseimage{
    width: 80px;
    height: 80px;
    position: absolute;
    right: 0px;
    vertical-align: middle;
    border: 1px solid #e4e4e4;
}
.trigger-r{
    width: 20px;
    height: 20px;
    position: absolute;
    right: 0;
    top: 15px;
}
.btn-area{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;    
}
.btn-area button{
    color: #ffffff;
    background: #49c23e;
    border: none;
}
.marginB100{
    margin-bottom: 100px;
}
