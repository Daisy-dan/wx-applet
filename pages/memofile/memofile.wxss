/* pages/memofile/memofile.wxss */
.positionR{
    position: relative;
}
.worksImg{
    padding: 10px;
    border-bottom: 1px dashed #e4e4e4;
    background: #ffffff;
}
.worksImg view{
    display: inline-block;
    width: 30%;
    height: 120px;
    box-sizing: border-box;
    overflow: hidden;
    margin: 5px;
}
.shade{
    position: absolute;
    top: 0;
    left: 0;
    background: #000000;
    width: 100%;
    height: 100%;
    opacity: 0.3;
}
.textarea{
    padding: 20px 0;
}
textarea{
    font-size: 14px;
    border: 1px solid #e4e4e4;
    width: 100%;
    height: 120px;
    padding: 10px;
    box-sizing: border-box;
    line-height: 26px;
    
}
.reward{
    height: 60px;
    padding: 10px 20px;
}
